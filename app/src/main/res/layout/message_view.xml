<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/message_view"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <android.support.v7.widget.CardView
    android:id="@+id/message_body_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/grid_new_4"
    android:layout_marginEnd="@dimen/grid_new_4"
    android:layout_marginLeft="@dimen/grid_new_4"
    android:layout_marginRight="@dimen/grid_new_4"
    android:layout_marginTop="@dimen/grid_new_4"
    android:layout_marginBottom="@dimen/grid_new_1"
    app:cardElevation="0dp">

    <TextView
      android:id="@+id/message_body_text_view"
      style="@style/BodyPrimary"
      android:padding="@dimen/grid_new_2"
      android:background="@color/ksr_grey_400"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="Hey there!"/>

  </android.support.v7.widget.CardView>

  <ImageView
    android:id="@+id/sender_avatar_image_view"
    android:layout_marginLeft="@dimen/grid_new_2"
    android:layout_marginStart="@dimen/grid_new_2"
    android:layout_marginTop="@dimen/grid_new_2"
    android:layout_width="@dimen/grid_new_4"
    android:layout_height="@dimen/grid_new_4"
    android:translationZ="3dp"
    tools:background="@color/blue"
    tools:ignore="ContentDescription,UnusedAttribute"/>

</RelativeLayout>
